<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.solandme.simpleblog.PostActivity">


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:text="Register company" />

    <ImageButton
        android:id="@+id/imageSelect"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_btn"
        android:contentDescription="@string/post_image"
        android:cropToPadding="false"
        android:elevation="0dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="latitude"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/registerBtn"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="longitude"
        android:maxLines="1"
        android:padding="15dp"
        android:layout_above="@+id/latitude"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="company name"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:layout_above="@+id/longitude"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnselectLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textColor="?attr/editTextColor"
        android:text="select company location"
        android:layout_gravity="center"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:drawableRight="@mipmap/ic_add_location_black_24dp"
        android:layout_above="@+id/company_name"
        android:layout_alignStart="@+id/company_name"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/company_name" />


</RelativeLayout>
