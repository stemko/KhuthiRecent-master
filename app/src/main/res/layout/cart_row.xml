<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:layout_margin="1dp">


    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/product_pic"
            android:paddingBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/product_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter"

            />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_toEndOf="@+id/product_pic"
            android:paddingBottom="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_product_cancel"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b_product_check_out"
            android:layout_alignBottom="@+id/b_product_check_out"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:drawableTop="@mipmap/ic_remove_shopping_cart_black_24dp"
            android:gravity="center"
            android:text="@string/remove"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <Button
            android:id="@+id/b_product_check_out"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description"
            android:layout_toStartOf="@+id/b_product_cancel"
            android:background="@null"
            android:drawableTop="@mipmap/ic_payment_black_24dp"
            android:gravity="center"
            android:text="@string/checkout"
            android:textAllCaps="false"

            android:textColor="@color/green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description"
            android:layout_toEndOf="@+id/product_pic"
            android:paddingBottom="10dp"
            android:text="R"
            android:textColor="#4CAF50"
            android:textSize="24sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
